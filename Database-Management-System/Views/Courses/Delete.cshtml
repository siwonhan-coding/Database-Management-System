@model Database_Management_System.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="delete-course-container">
    <h1 class="delete-title">Delete Confirmation</h1>

    <h3 class="delete-message">Are you sure you want to delete this course?</h3>
    <div class="course-details">
        <h4 class="course-header">Course #@Html.DisplayFor(model => model.CourseNumber)</h4>
        <hr />
        <dl class="row course-details-list">
            <dt class="col-sm-3 course-detail-label">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class="col-sm-9 course-detail-value">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt class="col-sm-3 course-detail-label">
                @Html.DisplayNameFor(model => model.CourseNumber)
            </dt>
            <dd class="col-sm-9 course-detail-value">
                @Html.DisplayFor(model => model.CourseNumber)
            </dd>
            <dt class="col-sm-3 course-detail-label">
                @Html.DisplayNameFor(model => model.CourseType)
            </dt>
            <dd class="col-sm-9 course-detail-value">
                @Html.DisplayFor(model => model.CourseType)
            </dd>
            <dt class="col-sm-3 course-detail-label">
                @Html.DisplayNameFor(model => model.Coompleted)
            </dt>
            <dd class="col-sm-9 course-detail-value">
                @Html.DisplayFor(model => model.Coompleted)
            </dd>
            <dt class="col-sm-3 course-detail-label">
                @Html.DisplayNameFor(model => model.Student)
            </dt>
            <dd class="col-sm-9 course-detail-value">
                @Html.DisplayFor(model => model.Student.StudentNumber)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="CourseId" />
        <button type="submit" class="btn btn-danger delete-button">Delete</button>
        <a asp-action="Index" class="btn btn-secondary back-button">Back to List</a>
    </form>
</div>
