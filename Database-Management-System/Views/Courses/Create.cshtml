@model Database_Management_System.Models.Course

@{
    ViewData["Title"] = "Register";
}

<div class="course-register-container">
    <h1 class="course-register-title">Course Registration</h1>

    <h4>Course Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger course-validation-summary"></div>
                <div class="form-group course-form-group">
                    <label asp-for="CourseName" class="control-label course-label"></label>
                    <input asp-for="CourseName" class="form-control course-input" />
                    <span asp-validation-for="CourseName" class="text-danger course-validation"></span>
                </div>
                <div class="form-group course-form-group">
                    <label asp-for="CourseNumber" class="control-label course-label"></label>
                    <input asp-for="CourseNumber" class="form-control course-input" />
                    <span asp-validation-for="CourseNumber" class="text-danger course-validation"></span>
                </div>
                <div class="form-group course-form-group">
                    <label asp-for="CourseType" class="control-label course-label"></label>
                    <input asp-for="CourseType" class="form-control course-input" />
                    <span asp-validation-for="CourseType" class="text-danger course-validation"></span>
                </div>
                <div class="form-group form-check course-form-group-check">
                    <label class="form-check-label course-check-label">
                        <input class="form-check-input course-check-input" asp-for="Coompleted" /> @Html.DisplayNameFor(model => model.Coompleted)
                    </label>
                </div>
                <div class="form-group course-form-group">
                    <label asp-for="StudentId" class="control-label course-label"></label>
                    <select asp-for="StudentId" class="form-control course-input" asp-items="ViewBag.StudentId"></select>
                </div>

                <div class="form-group course-form-group">
                    <input type="submit" value="Register" class="btn btn-primary course-register-button" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="course-back-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
