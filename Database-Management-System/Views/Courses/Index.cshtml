@model IEnumerable<Database_Management_System.Models.Course>

@{
    ViewData["Title"] = "Course Page";
}

<style>
    h1{
        color: purple;
    }
    .thead-dark{
        background-color: lightskyblue
    }
    a{
        color: black;
    }
    a:hover{
        color: yellow;
        background-color: black;
        text-decoration: underline;
    }
    tbody:hover{
        background-color: lightgrey;
    }
</style>

<h1 class="text-center my-4">Register</h1>


<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Register Here</a>
</div>

<table class="table table-striped table-hover sortable">
    <thead class="thead-dark">
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.CourseName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.CourseNumber)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coompleted)
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Student)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentNumber)
                </td>
            
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
