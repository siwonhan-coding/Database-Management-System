@model IEnumerable<Database_Management_System.Models.Course>

@{
    ViewData["Title"] = "Course Page";
}

<div class="course-page-container">
    <h1 class="course-page-title">Register for a Course</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-action="Create" class="btn btn-primary course-register-button">Register Here</a>
        </p>
    }
    <table class="table table-striped table-hover sortable course-table">
        <thead class="course-table-head">
            <tr>
                <th>
                    <a href="#" class="course-table-link">@Html.DisplayNameFor(model => model.CourseName)</a>
                </th>
                <th>
                    <a href="#" class="course-table-link">@Html.DisplayNameFor(model => model.CourseNumber)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coompleted)
                </th>
                <th>
                    <a href="#" class="course-table-link">@Html.DisplayNameFor(model => model.Student)</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coompleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.StudentNumber)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td class="course-table-actions">
                            <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-warning">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
