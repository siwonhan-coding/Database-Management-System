@model Database_Management_System.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="delete-confirmation-container">
    <h1 class="delete-title">Delete Confirmation</h1>

    <h3 class="delete-message">Are you sure you want to delete this student?</h3>
    <div class="student-details">
        <h4 class="student-header">Student #@Html.DisplayFor(model => model.StudentNumber)</h4>
        <hr />
        <dl class="row student-details-list">
            <dt class="col-sm-3 student-detail-label">
                @Html.DisplayNameFor(model => model.StudentNumber)
            </dt>
            <dd class="col-sm-9 student-detail-value">
                @Html.DisplayFor(model => model.StudentNumber)
            </dd>
            <dt class="col-sm-3 student-detail-label">
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd class="col-sm-9 student-detail-value">
                @Html.DisplayFor(model => model.StudentName)
            </dd>
            <dt class="col-sm-3 student-detail-label">
                @Html.DisplayNameFor(model => model.ProgramName)
            </dt>
            <dd class="col-sm-9 student-detail-value">
                @Html.DisplayFor(model => model.ProgramName)
            </dd>
            <dt class="col-sm-3 student-detail-label">
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </dt>
            <dd class="col-sm-9 student-detail-value">
                @Html.DisplayFor(model => model.RegistrationDate)
            </dd>
            <dt class="col-sm-3 student-detail-label">
                @Html.DisplayNameFor(model => model.StudentEmail)
            </dt>
            <dd class="col-sm-9 student-detail-value">
                @Html.DisplayFor(model => model.StudentEmail)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger delete-button">Delete</button>
        <a asp-action="Index" class="btn btn-secondary back-button">Back to List</a>
    </form>
</div>
