@model IEnumerable<Database_Management_System.Models.Student>

@{
    ViewData["Title"] = "Student Page";
}

<h1>Register</h1>

<p>
    <a asp-action="Create">Register Here</a>
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.StudentNumber)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.StudentName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.ProgramName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.RegistrationDate)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                    </td>
                }
            
        </tr>
}
    </tbody>
</table>
